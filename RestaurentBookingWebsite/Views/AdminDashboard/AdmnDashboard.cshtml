@model List<RestaurentBookingWebsite.DbModels.Booking>

@{
    ViewData["Title"] = "AdmnDashboard";
}
<h3>Hi @TempData["UserName"]</h3>
@if (ViewBag.Customers != null)
{
    <h3>Last Seven days Registration</h3>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Customer Id
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Address
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Email
                </th>
                <th>
                    User Id
                </th>
                <th>
                    Date Of Registration
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Customers)
            {
                <tr>
                    <td>
                        @item.CustomerId
                    </td>
                    <td>
                        @item.FirstName
                    </td>
                    <td>
                        @item.LastName
                    </td>
                    <td>
                        @item.Address
                    </td>
                    <td>
                        @item.PhoneNumber
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.UserId
                    </td>
                    <td>
                        @item.DateOfRegistration
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<h3>Upcoming 3 days bookings</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                Booking Date
            </th>
            <th>
                Slot Time
            </th>
            <th>
                Status
            </th>
            <th>
                Creation Time
            </th>
            <th>
                Booking Id
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in ViewBag.Bookings)
        {
            <tr>
                @if (ViewBag.Bookings.Count > 0)
                {
                    <td>
                        @item.BookingDate
                    </td>
                    <td>
                        @item.SlotTime
                    </td>
                    <td>
                        @item.Status
                    </td>
                    <td>
                        @item.CreationTime
                    </td>
                    <td>
                        @item.BookingId
                    </td>
                }
                else
                {
                    <td>No Data Available</td>
                }
            </tr>
        }
    </tbody>
   
</table>

@if (ViewBag.Cancellations != null)
{
    <h3>Next Three Days Cancellation</h3>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Booking Date
                </th>
                <th>
                    Slot Time
                </th>
                <th>
                    Status
                </th>
                <th>
                    Creation Time
                </th>
                <th>
                    Booking Id
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Cancellations)
            {
                <tr>
                    <td>
                        @item.BookingDate
                    </td>
                    <td>
                        @item.SlotTime
                    </td>
                    <td>
                        @item.Status
                    </td>
                    <td>
                        @item.CreationTime
                    </td>
                    <td>
                        @item.BookingId
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


<div class="container">  
    @using (Html.BeginForm("AdmnDashboard", "AdminDashboard", FormMethod.Post))  
    {  
        <div class="row">  
            <div class="col-sm-2 text-lg-left"><label>From Date</label></div>  
            <div class="col-sm-3">

                <input type="date" name="From" class="form-control" placeholder="Select Date" />
            </div>  
            <div class="col-sm-2"><label>To Date</label></div>  
            <div class="col-sm-3">

                <input type="date" name="To" class="form-control" placeholder="Select Date" />
            </div>  
            <div class="col-sm-2">  
                <input type="submit" value="Search" class="btn btn-primary form-control" />  
            </div>  
            <br /><br />  
        </div>
        @if (ViewBag.DateRangeBookings != null)
        {
            <h1>Bookings as per the selected start and end date</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Booking Date
                        </th>
                        <th>
                            Slot Time
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Creation Time
                        </th>
                        <th>
                            Booking Id
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in ViewBag.DateRangeBookings)
                    {
                        <tr>
                            <td>
                                @item.BookingDate
                            </td>
                            <td>
                                @item.SlotTime
                            </td>
                            <td>
                                @item.Status
                            </td>
                            <td>
                                @item.CreationTime
                            </td>
                            <td>
                                @item.BookingId
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        }
         
    }  
</div>  

